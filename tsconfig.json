{
    "include": ["src/**/*", "tests/**/*"],
    "exclude": ["templates/**/*"],
    "compilerOptions": {
        "rootDir": ".",
        "allowJs": true,
        "outDir": "dist",
        "strict": true,
        "target": "ES2020",
        "module": "NodeNext",
        "sourceMap": true,
        "esModuleInterop": true,
        "moduleResolution": "NodeNext",
        "allowSyntheticDefaultImports": true,
        "types": ["vitest/globals"],
        "baseUrl": "src"
    }
}
